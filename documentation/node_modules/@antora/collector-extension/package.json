{
  "name": "@antora/collector-extension",
  "version": "1.0.0-beta.2",
  "description": "An Antora extension that runs a configurable command per content root and collects the content files that it generates.",
  "license": "MPL-2.0",
  "author": "OpenDevise Inc. (https://opendevise.com)",
  "contributors": [
    "Dan Allen <dan@opendevise.com>",
    "Sarah White <sarah@opendevise.com>"
  ],
  "homepage": "https://antora.org",
  "repository": "gitlab:antora/antora-collector-extension",
  "bugs": {
    "url": "https://gitlab.com/antora/antora-collector-extension/issues"
  },
  "scripts": {
    "postpublish": "npx -y downdoc --postpublish",
    "prepublishOnly": "npx -y downdoc --prepublish"
  },
  "main": "lib/index.js",
  "exports": {
    ".": "./lib/index.js",
    "./package.json": "./package.json"
  },
  "imports": {
    "#parse-command": "./lib/util/parse-command.js"
  },
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@antora/expand-path-helper": "~2.0",
    "cache-directory": "~2.0",
    "fast-glob": "~3.3",
    "isomorphic-git": "~1.25",
    "js-yaml": "~4.1"
  },
  "devDependencies": {
    "@antora/content-aggregator": "~3.1"
  },
  "keywords": [
    "antora",
    "antora-extension",
    "asciidoc",
    "asciidoctor",
    "command",
    "generated-content",
    "documentation"
  ]
}
